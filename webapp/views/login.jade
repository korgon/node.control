extends layout_minimal

block jscripts
	script(src="/javascripts/jquery-ui-1.10.3.js")
	script.
		// do stuff once document loads
		$(document).ready( function() { 
			//$("div").css({"border-color": "#FF0000", "border-weight":"1px", "border-style":"solid"});
			$('#login').button().click(function() {
					$('#logon').submit();
			});
			$('#username').focus();
			if ($('#username').val() == "")
				$('#login').button('disable');

			$('#username').keypress( function() {
				$('#login').button('enable');
			});

			$('input').keypress(function (e) {
				if (e.which == 13) {
					$('#login').focus().click();
				}
			});

		});

block content
	.content
		.logincirc
			h1.login(style='margin-top: 50px;') [ login ]
		form(method='post', action='/login', id='logon' autocomplete = "off")
			.login(style='position: relative; top: 0px;')
				div
					label.login(for='username') username
					input#username.popinput(type='text' name='username')
				div
					label.login(for='password') password
					input.popinput(type='password' name='password')
				if (message != "")
					p.alert= message
				else
					p.alert &nbsp;
			.center(style='position: relative; top: 5px;')
				input(id="login" type="button" value="enter")
